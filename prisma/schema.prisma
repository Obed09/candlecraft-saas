// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("user")
  accounts      Account[]
  sessions      Session[]
  
  // Business Relations
  business      Business?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Business & Subscription Models
model Business {
  id                String         @id @default(cuid())
  name              String
  userId            String         @unique
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  subscriptionId    String?        @unique
  subscription      Subscription?
  
  products          Product[]
  recipes           Recipe[]
  customers         Customer[]
  orders            Order[]
  expenses          Expense[]
  
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
}

model Subscription {
  id                  String    @id @default(cuid())
  businessId          String    @unique
  business            Business  @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  stripeCustomerId    String?   @unique
  stripeSubscriptionId String?  @unique
  stripePriceId       String?
  stripeCurrentPeriodEnd DateTime?
  
  plan                String    @default("free") // free, starter, pro, enterprise
  status              String    @default("active") // active, canceled, past_due
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

// Inventory Models
model Product {
  id              String          @id @default(cuid())
  businessId      String
  business        Business        @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  name            String
  sku             String?
  description     String?         @db.Text
  type            String          // candle, wax, fragrance, wick, container, dye, additive
  
  // Inventory
  quantity        Float           @default(0)
  unit            String          @default("units") // units, oz, lb, kg, ml, l
  reorderPoint    Float?
  
  // Pricing
  costPerUnit     Float           @default(0)
  retailPrice     Float?
  
  // Candle-specific fields
  weightOz        Float?
  burnTimeHours   Int?
  fragrance       String?
  color           String?
  
  recipeIngredients RecipeIngredient[]
  orderItems      OrderItem[]
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  @@index([businessId])
}

// Recipe/Formula Models
model Recipe {
  id              String          @id @default(cuid())
  businessId      String
  business        Business        @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  name            String
  description     String?         @db.Text
  batchSize       Float           // Total batch size in oz/g
  unit            String          @default("oz")
  
  // Candle specifications
  candleCount     Int?            // How many candles this recipe makes
  containerSize   Float?
  estimatedCost   Float?
  suggestedPrice  Float?
  
  ingredients     RecipeIngredient[]
  
  notes           String?         @db.Text
  isActive        Boolean         @default(true)
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  @@index([businessId])
}

model RecipeIngredient {
  id              String   @id @default(cuid())
  recipeId        String
  recipe          Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  
  productId       String
  product         Product  @relation(fields: [productId], references: [id])
  
  quantity        Float
  unit            String   @default("oz")
  percentage      Float?   // Percentage of total batch
  
  notes           String?
  
  @@index([recipeId])
  @@index([productId])
}

// Customer & Order Models
model Customer {
  id              String   @id @default(cuid())
  businessId      String
  business        Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  name            String
  email           String?
  phone           String?
  
  // Address
  address         String?
  city            String?
  state           String?
  zipCode         String?
  country         String?  @default("US")
  
  orders          Order[]
  
  notes           String?  @db.Text
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([businessId])
}

model Order {
  id              String      @id @default(cuid())
  businessId      String
  business        Business    @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  customerId      String?
  customer        Customer?   @relation(fields: [customerId], references: [id], onDelete: SetNull)
  
  orderNumber     String      @unique
  status          String      @default("pending") // pending, processing, completed, canceled
  
  items           OrderItem[]
  
  subtotal        Float
  tax             Float       @default(0)
  shipping        Float       @default(0)
  total           Float
  
  // Payment
  paymentStatus   String      @default("unpaid") // unpaid, paid, refunded
  paymentMethod   String?
  stripePaymentId String?
  
  notes           String?     @db.Text
  
  orderDate       DateTime    @default(now())
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([businessId])
  @@index([customerId])
}

model OrderItem {
  id              String   @id @default(cuid())
  orderId         String
  order           Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId       String?
  product         Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  
  productName     String   // Stored in case product is deleted
  quantity        Int
  unitPrice       Float
  total           Float
  
  @@index([orderId])
  @@index([productId])
}

// Expense Tracking
model Expense {
  id              String   @id @default(cuid())
  businessId      String
  business        Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  category        String   // supplies, shipping, marketing, utilities, other
  description     String
  amount          Float
  
  date            DateTime @default(now())
  
  receiptUrl      String?
  notes           String?  @db.Text
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([businessId])
  @@index([date])
}
